<div>
  <p><%= question.prompt %></p>
    <% question.choices.each do |choice| %>
      <input id="<%=question.id%>" type="radio" name="userresponses[choice<%=question.id%>]" value="<%=choice.selection%>" />
      <option value="<%= choice.selection %>"><%= choice.selection %></option>
    <% end %>
</div>
